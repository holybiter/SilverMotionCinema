@{
    ViewData["Title"] = "Home Page";
}

@model List<Movie>

<div class="container mt-5">
    <div id="movieCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="@Model[i].Image" class="d-block w-100" alt="Image">
                        </div>
                        <div class="col-md-6">
                            <h2>@Model[i].Title</h2>
                            <p>@Model[i].Description</p>
                            <p><b>Genre:</b> @Model[i].Genre</p>
                            <p><b>Language:</b> @Model[i].Language</p>
                            <p><b>Country:</b> @Model[i].Country</p>
                            <p><b>Duration:</b> @Model[i].Duration</p>
                            <h2>@Model[i].AgeRating</h2>
                        </div>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev carousel-dark" href="#movieCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
        </a>
        <a class="carousel-control-next carousel-dark" href="#movieCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
        </a>
    </div>
</div>


